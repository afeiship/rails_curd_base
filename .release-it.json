{
  "git": {
    "requireCleanWorkingDir": false
  },
  "hooks": {
    "after:init": ["git add .],
    "after:bump": [
      "sed -i '' \"s/\\\\.VERSION = \".*\"/\\\\.VERSION = \\\"${version}\\\"/\" lib/rails_curd_base/version.rb",
      "git add lib/rails_curd_base/version.rb",
      "git commit -m \"chore(release): ${version}\""
    ],
    "after:release": [
      "gem push rails_curd_base-${version}.gem",
      "git push"
    ]
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}",
    "skipChecks": true,
    "releaseNotes": "cat CHANGELOG.md | grep -A 50 \"${version}\" || echo \"Release ${version}\""
  },
  "npm": {
    "publish": false,
    "skipChecks": true
  }
}
